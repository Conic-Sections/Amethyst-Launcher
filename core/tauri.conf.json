{
    "productName": "amethyst-launcher",
    "version": "0.0.0",
    "identifier": "top.btlcraft.launcher",
    "build": {
        "beforeDevCommand": "yarn dev",
        "devUrl": "http://localhost:5173",
        "beforeBuildCommand": "yarn build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Amethyst Launcher",
                "minWidth": 1080,
                "minHeight": 640,
                "focus": true,
                "transparent": true,
                "decorations": false,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "createUpdaterArtifacts": true
    },
    "plugins": {
